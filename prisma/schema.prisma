generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int      @id @default(autoincrement()) // PK
  email   String   @unique
  name    String   @map("firstName")
  role    Role?    @default(USER)
  profile Profile?
  posts   Post[]

  @@unique([name, role])
  @@index([id, email])
  @@map("users")
}

enum Role {
  USER
  ADMIN
}

// 1-1 relation
model Profile {
  id  Int    @id @default(autoincrement()) // PK
  bio String

  userId Int  @unique // FK
  user   User @relation(fields: [userId], references: [id])
}

// 1-n relation
model Post {
  id        Int      @id @default(autoincrement()) // PK
  authorId  Int // FK
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  pulished  Boolean  @default(false)
  author    User     @relation(fields: [authorId], references: [id])

  categories Category[]
}

// n-m relation
model Category {
  id    Int    @id @default(autoincrement())
  name  String
  posts Post[]
}
